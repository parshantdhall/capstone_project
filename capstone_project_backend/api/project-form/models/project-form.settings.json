{
  "kind": "collectionType",
  "collectionName": "project_forms",
  "info": {
    "name": "Project Form",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "project_title": {
      "type": "string",
      "required": true
    },
    "project_description": {
      "type": "text",
      "required": true
    },
    "number_of_groups_allowed": {
      "type": "integer",
      "required": true
    },
    "number_of_students_allowed": {
      "type": "integer",
      "required": true
    },
    "project_file": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files"
      ],
      "plugin": "upload",
      "required": false
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "project_forms"
    },
    "student_groups_priorities": {
      "collection": "student-group",
      "via": "project_priorities"
    },
    "allocated_student_groups": {
      "collection": "student-group",
      "via": "project_allocated"
    },
    "num_of_groups_left_to_alloc": {
      "type": "integer",
      "required": true
    }
  }
}
